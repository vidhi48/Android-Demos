<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navFragment1">

    <fragment
        android:id="@+id/navFragment1"
        android:name="com.example.demo.navigation.FirstFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_navFragment1_to_navFragment2"
            app:destination="@id/navFragment2" />
    </fragment>

    <fragment
        android:id="@+id/navFragment2"
        android:name="com.example.demo.navigation.SecondFragment"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="user"
            app:argType="com.example.demo.models.User" />
        <action
            android:id="@+id/action_navFragment2_to_navFragment1"
            app:destination="@id/navFragment1" />
    </fragment>
</navigation>