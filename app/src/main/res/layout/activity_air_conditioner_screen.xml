<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="actionBar"
            type="com.example.demo.models.AppBarModel" />

        <variable
            name="swingBtn"
            type="com.example.demo.models.ButtonModel" />

        <variable
            name="timerBtn"
            type="com.example.demo.models.ButtonModel" />

        <variable
            name="autoBtn"
            type="com.example.demo.models.ButtonModel" />

        <variable
            name="settingBtn"
            type="com.example.demo.models.ButtonModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteApp"
        tools:context="com.example.demo.activities.AirConditionerScreen">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <include
            android:id="@+id/appBar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:appBar="@{actionBar}" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/volt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/button_corner"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_power_24"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/black"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="@string/volt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_280"
            app:tabIndicator="@drawable/tab_selected_background"
            android:background="@drawable/tab_background"
            app:tabIconTint="@color/tab_selector_color"
            app:tabIndicatorHeight="@dimen/dp_48"
            app:tabIndicatorColor="@color/blue"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="@id/guideLine2"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/volt" />

        <include
            android:id="@+id/swing"
            layout="@layout/buttons_air_conditioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:buttons="@{swingBtn}"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintEnd_toStartOf="@id/timer"
            app:layout_constraintTop_toBottomOf="@id/tabLayout" />

        <include
            android:id="@+id/timer"
            layout="@layout/buttons_air_conditioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttons="@{timerBtn}"
            app:layout_constraintStart_toEndOf="@id/swing"
            app:layout_constraintEnd_toStartOf="@id/scene"
            app:layout_constraintTop_toTopOf="@id/swing" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/timer"
            app:layout_constraintStart_toStartOf="@id/timer"
            app:layout_constraintTop_toBottomOf="@id/timer" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner"
            android:backgroundTint="@color/green"
            android:drawableStart="@drawable/scene"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:drawableTint="@color/white"
            android:paddingStart="@dimen/dp_13"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_2"
            app:layout_constraintStart_toEndOf="@id/timer"
            app:layout_constraintEnd_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toTopOf="@id/timer" />

        <TextView
            android:id="@+id/subtitleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scene"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/scene"
            app:layout_constraintStart_toStartOf="@id/scene"
            app:layout_constraintTop_toBottomOf="@id/scene" />

        <TextView
            android:id="@+id/sceneSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onText"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/subtitleBtn"
            app:layout_constraintStart_toStartOf="@id/subtitleBtn"
            app:layout_constraintTop_toBottomOf="@id/subtitleBtn" />

        <include
            android:id="@+id/auto"
            layout="@layout/buttons_air_conditioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            app:buttons="@{autoBtn}"
            app:layout_constraintStart_toStartOf="@id/swing"
            app:layout_constraintTop_toBottomOf="@id/swing" />

        <ImageButton
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner"
            android:backgroundTint="@color/black"
            android:contentDescription="@string/app_name"
            android:paddingStart="@dimen/dp_35"
            android:paddingTop="@dimen/dp_13"
            android:paddingEnd="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_13"
            android:src="@drawable/power"
            app:layout_constraintStart_toEndOf="@id/auto"
            app:layout_constraintEnd_toStartOf="@id/setting"
            app:layout_constraintTop_toTopOf="@id/auto"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_23"
            android:text="@string/onText"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/power"
            app:layout_constraintTop_toBottomOf="@id/power" />

        <View
            android:id="@+id/dotText"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_3"
            android:background="@color/gray"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@id/textOn"
            app:layout_constraintTop_toTopOf="@id/textOn"
            />

        <TextView
            android:id="@+id/textOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/offText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textOn"
            app:layout_constraintTop_toBottomOf="@id/power" />

        <include
            android:id="@+id/setting"
            layout="@layout/buttons_air_conditioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttons="@{settingBtn}"
            app:layout_constraintStart_toEndOf="@id/power"
            app:layout_constraintEnd_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toTopOf="@id/power" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@color/lightGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/auto" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_150"
            android:layout_marginBottom="@dimen/dp_15"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_lock_open_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/lockText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/unlock"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/lock"
            app:layout_constraintTop_toTopOf="@id/lock" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>