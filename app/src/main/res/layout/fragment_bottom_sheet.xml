<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="document"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="camera"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="gallery"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="audio"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="location"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="payment"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="contact"
            type="com.example.demo.whatsapp.models.BottomSheet" />

        <variable
            name="poll"
            type="com.example.demo.whatsapp.models.BottomSheet" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.demo.whatsapp.BottomSheetFragment"
        android:background="@color/white">

        <include
            android:id="@+id/documentBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomSheet="@{document}"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cameraBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/cameraBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomSheet="@{camera}"
            app:layout_constraintTop_toTopOf="@id/documentBtn"
            app:layout_constraintEnd_toStartOf="@id/galleryBtn"
            app:layout_constraintStart_toEndOf="@id/documentBtn" />

        <include
            android:id="@+id/galleryBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bottomSheet="@{gallery}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cameraBtn"
            app:layout_constraintStart_toEndOf="@id/cameraBtn" />

        <include
            android:id="@+id/audioBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:bottomSheet="@{audio}"
            app:layout_constraintTop_toBottomOf="@id/documentBtn"
            app:layout_constraintStart_toStartOf="@id/documentBtn"/>

        <include
            android:id="@+id/locationBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:bottomSheet="@{location}"
            app:layout_constraintStart_toStartOf="@id/cameraBtn"
            app:layout_constraintTop_toBottomOf="@id/cameraBtn" />

        <include
            android:id="@+id/paymentBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:bottomSheet="@{payment}"
            app:layout_constraintStart_toStartOf="@id/galleryBtn"
            app:layout_constraintTop_toBottomOf="@id/galleryBtn" />

        <include
            android:id="@+id/contactBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:bottomSheet="@{contact}"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/audioBtn"
            app:layout_constraintTop_toBottomOf="@id/audioBtn" />

        <include
            android:id="@+id/pollBtn"
            layout="@layout/bottom_sheet_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:bottomSheet="@{poll}"
            app:layout_constraintStart_toStartOf="@id/locationBtn"
            app:layout_constraintTop_toBottomOf="@id/locationBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>