<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/web_service"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginHttp"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/api_calling_without_third_party_library"
        android:textAllCaps="false"
        android:backgroundTint="@color/lightBlue"
        android:padding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/displayRetrofit"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/api_calling_using_retrofit"
        android:textAllCaps="false"
        android:backgroundTint="@color/lightBlue"
        android:padding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/loginHttp"
        app:layout_constraintEnd_toEndOf="@id/loginHttp"
        app:layout_constraintTop_toBottomOf="@id/loginHttp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apiOkhttp"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/api_calling_using_okhttp"
        android:textAllCaps="false"
        android:backgroundTint="@color/lightBlue"
        android:padding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/displayRetrofit"
        app:layout_constraintEnd_toEndOf="@id/displayRetrofit"
        app:layout_constraintTop_toBottomOf="@id/displayRetrofit"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageUpload"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/image_uploading"
        android:textAllCaps="false"
        android:backgroundTint="@color/lightBlue"
        android:padding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="@id/apiOkhttp"
        app:layout_constraintEnd_toEndOf="@id/apiOkhttp"
        app:layout_constraintTop_toBottomOf="@id/apiOkhttp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/news"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/news_api"
        android:textAllCaps="false"
        android:backgroundTint="@color/lightBlue"
        android:layout_marginTop="@dimen/dp_25"
        android:padding="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="@id/imageUpload"
        app:layout_constraintEnd_toEndOf="@id/imageUpload"
        app:layout_constraintTop_toBottomOf="@id/imageUpload"
        />

</androidx.constraintlayout.widget.ConstraintLayout>