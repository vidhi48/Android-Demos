<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <View
        android:id="@+id/circularBackground"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/curve_background_left"
        app:layout_constraintTop_toBottomOf="@id/customView"
        app:layout_constraintCircle="@id/customView"
        app:layout_constraintCircleRadius="@dimen/dp_130"
        app:layout_constraintCircleAngle="270"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/circularBackground2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/curve_background_right"
        app:layout_constraintTop_toBottomOf="@id/customView"
        app:layout_constraintCircle="@id/customView"
        app:layout_constraintCircleRadius="@dimen/dp_130"
        app:layout_constraintCircleAngle="90"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_add_24"
        android:layout_marginTop="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="@id/circularBackground"
        app:layout_constraintEnd_toEndOf="@id/circularBackground"
        app:layout_constraintTop_toTopOf="@id/circularBackground"
        app:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/speakerBtn"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_volume_up_24"
        app:layout_constraintStart_toStartOf="@id/circularBackground"
        app:layout_constraintTop_toTopOf="@id/circularBackground"
        app:layout_constraintBottom_toBottomOf="@id/circularBackground"
        app:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_remove_24"
        app:layout_constraintStart_toStartOf="@id/circularBackground"
        app:layout_constraintEnd_toEndOf="@id/circularBackground"
        app:layout_constraintBottom_toBottomOf="@id/circularBackground"
        app:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/upArrow"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_keyboard_arrow_up_24"
        android:layout_marginTop="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="@id/circularBackground2"
        app:layout_constraintEnd_toEndOf="@id/circularBackground2"
        app:layout_constraintTop_toTopOf="@id/circularBackground2"
        app:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/middleBtn"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:backgroundTint="@color/blue"
        android:layout_marginEnd="@dimen/dp_3"
        app:layout_constraintEnd_toEndOf="@id/circularBackground2"
        app:layout_constraintTop_toTopOf="@id/circularBackground2"
        app:layout_constraintBottom_toBottomOf="@id/circularBackground2"
        />

    <ImageButton
        android:id="@+id/downArrow"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintStart_toStartOf="@id/circularBackground2"
        app:layout_constraintEnd_toEndOf="@id/circularBackground2"
        app:layout_constraintBottom_toBottomOf="@id/circularBackground2"
        app:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <com.example.demo.customview.RemoteCustomView
        android:id="@+id/customView"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_20"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/customView"
        app:layout_constraintEnd_toEndOf="@id/customView"
        app:layout_constraintTop_toTopOf="@id/customView"
        app:layout_constraintBottom_toBottomOf="@id/customView"
        />

    <ImageView
        android:id="@+id/google"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@drawable/google"
        app:layout_constraintStart_toStartOf="@id/menuText"
        app:layout_constraintEnd_toEndOf="@id/menuText"
        app:layout_constraintTop_toBottomOf="@id/menuText"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up_arrow"
        android:backgroundTint="@color/lightGray"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/customView"
        app:layout_constraintEnd_toEndOf="@id/customView"
        app:layout_constraintTop_toTopOf="@id/customView"
        android:contentDescription="@string/app_name"
        app:tint="@color/grayIcon" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow"
        android:backgroundTint="@color/lightGray"
        android:contentDescription="@string/app_name"
        app:tint="@color/grayIcon"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/customView"
        app:layout_constraintTop_toTopOf="@id/customView"
        app:layout_constraintBottom_toBottomOf="@id/customView"/>

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/right_arrow"
        android:scaleType="fitXY"
        android:backgroundTint="@color/lightGray"
        android:contentDescription="@string/app_name"
        app:tint="@color/grayIcon"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/customView"
        app:layout_constraintTop_toTopOf="@id/customView"
        app:layout_constraintBottom_toBottomOf="@id/customView"/>

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down_arrow"
        android:scaleType="fitXY"
        android:backgroundTint="@color/lightGray"
        android:contentDescription="@string/app_name"
        app:tint="@color/grayIcon"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/customView"
        app:layout_constraintEnd_toEndOf="@id/customView"
        app:layout_constraintBottom_toBottomOf="@id/customView"/>

</androidx.constraintlayout.widget.ConstraintLayout>