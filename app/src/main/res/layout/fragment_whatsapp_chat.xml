<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.demo.whatsapp.WhatsappChatFragment"
    android:background="@color/chatBack">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIconTint="@color/white"
            android:background="@color/whatsApp"
            android:theme="@style/WhatsappActionBarTheme"
            app:menu="@menu/chat_action_bar"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="@string/app_name"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/profile_image"
                android:layout_marginEnd="@dimen/dp_10"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sandra_adams"
                android:textColor="@color/white"
                />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message"
        android:layout_marginBottom="@dimen/dp_20"
        />

   <EditText
       android:id="@+id/message"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginEnd="@dimen/dp_70"
       android:layout_marginStart="@dimen/dp_5"
       android:paddingTop="@dimen/dp_15"
       android:paddingBottom="@dimen/dp_15"
       android:paddingStart="@dimen/dp_15"
       android:maxLines="3"
       android:background="@drawable/message_edit_background"
       android:layout_marginBottom="@dimen/dp_10"
       app:layout_constraintEnd_toStartOf="@id/microphone"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="@string/message"
       tools:ignore="RtlSymmetry"
       android:autofillHints="message"
       android:inputType="text" />

    <ImageButton
        android:id="@+id/chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_attach_file_24"
        android:rotation="120"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/payment"
        app:layout_constraintTop_toTopOf="@id/payment"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_currency_rupee_24"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/camera"
        app:layout_constraintTop_toTopOf="@id/camera"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_camera_alt_24"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="@id/message"
        app:layout_constraintTop_toTopOf="@id/message"
        android:contentDescription="@string/app_name" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/whatsApp"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/message"
        app:layout_constraintTop_toTopOf="@id/message"
        android:src="@drawable/baseline_send_24"
        android:tint="@color/white"
        android:contentDescription="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>