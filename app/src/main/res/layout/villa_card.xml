<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/villaCard"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/whiteCard"
        app:cardCornerRadius="@dimen/dp_10"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/villaLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/villaLocation"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_20"
                android:maxLines="1"
                android:text="@string/duration"
                android:textColor="@color/grayNew"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/villaLocation"
                app:layout_constraintTop_toBottomOf="@id/villaLocation" />

            <ImageView
                android:id="@+id/offerImage"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_35"
                android:contentDescription="@string/app_name"
                android:src="@drawable/flame"
                app:layout_constraintStart_toEndOf="@id/villaLocation"
                app:layout_constraintTop_toTopOf="@id/villaLocation" />

            <TextView
                android:id="@+id/offerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/offer"
                android:textColor="@color/darkYellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/offerImage"
                app:layout_constraintTop_toTopOf="@id/offerImage" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/duration"
                app:layout_constraintTop_toBottomOf="@id/duration">

                <com.google.android.material.chip.Chip
                    android:id="@+id/guestChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/eggBlue"
                    android:text="@string/guestChip"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/bedroomChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blueColor"
                    android:text="@string/bedroomChip"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/priceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/emeraldGreen"
                    android:text="@string/priceChip"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poolChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/skyBlue"
                    android:text="@string/poolChip"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/kitchenChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkOrange"
                    android:text="@string/kitchenChip"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/wifiChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/brightPurple"
                    android:text="@string/wifiChip"
                    android:textColor="@color/white" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
