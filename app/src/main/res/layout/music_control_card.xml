<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="musicControls"
            type="com.example.demo.models.MusicControlModel" />

        <variable
            name="buttonImages"
            type="com.example.demo.models.ButtonImageModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/starBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_star_24"
            app:borderWidth="@dimen/dp_0"
            app:tint="@color/yellow"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:id="@+id/musicControlCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:backgroundTint="@color/lightGray"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toEndOf="@id/starBtn"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/backward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_5"
                    android:backgroundTint="@color/lightGray"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@{musicControls.backward}"
                    app:layout_constraintEnd_toStartOf="@id/pause"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/gray" />

                <ImageButton
                    android:id="@+id/pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp_20"
                    android:backgroundTint="@color/lightGray"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@{musicControls.middle}"
                    app:layout_constraintStart_toEndOf="@id/backward"
                    app:layout_constraintTop_toTopOf="@id/backward"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/forward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:backgroundTint="@color/lightGray"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@{musicControls.next}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pause"
                    app:layout_constraintTop_toTopOf="@id/backward"
                    app:tint="@color/gray" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/configureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            android:src="@drawable/playlist"
            app:borderWidth="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toEndOf="@id/musicControlCard"
            app:layout_constraintTop_toTopOf="@id/musicControlCard" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner"
            android:backgroundTint="@color/blue"
            android:drawableStart="@{buttonImages.startDrawable}"
            android:drawableEnd="@{buttonImages.endDrawable}"
            tools:text="@string/demo"
            android:drawableTint="@color/white"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="@id/starBtn"
            app:layout_constraintTop_toBottomOf="@id/starBtn"/>

        <TextView
            android:id="@+id/subtitleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{buttonImages.subtitle}"
            android:textColor="@color/black"
            tools:text="@string/demo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/button"
            app:layout_constraintEnd_toEndOf="@id/button"
            app:layout_constraintTop_toBottomOf="@id/button"
            />

        <ImageButton
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/power"
            android:backgroundTint="@color/black"
            android:paddingStart="@dimen/dp_30"
            android:paddingEnd="@dimen/dp_30"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13"
            android:background="@drawable/button_corner"
            app:tint="@color/white"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintStart_toEndOf="@id/button"
            app:layout_constraintTop_toTopOf="@id/button"/>

        <TextView
            android:id="@+id/textOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onText"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="@id/power"
            app:layout_constraintTop_toBottomOf="@id/power"
            />

        <TextView
            android:id="@+id/textOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offText"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@id/textOn"
            app:layout_constraintTop_toBottomOf="@id/power"
            />

        <ImageButton
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_settings_24"
            android:backgroundTint="@color/white"
            android:paddingStart="@dimen/dp_30"
            android:paddingEnd="@dimen/dp_30"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13"
            android:background="@drawable/button_corner"
            app:tint="@color/black"
            tools:ignore="MissingConstraints"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintStart_toEndOf="@id/power"
            app:layout_constraintTop_toTopOf="@id/power"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/center"
            app:layout_constraintEnd_toEndOf="@id/center"
            app:layout_constraintTop_toBottomOf="@id/center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>