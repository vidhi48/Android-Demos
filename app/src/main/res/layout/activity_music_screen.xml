<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="actionBar"
            type="com.example.demo.models.AppBarModel" />

        <variable
            name="musicControlCard"
            type="com.example.demo.models.MusicControlModel" />

        <variable
            name="castingBtn"
            type="com.example.demo.models.ButtonImageModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteApp"
        tools:context="com.example.demo.MusicScreen">

        <include
            android:id="@+id/appBar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:appBar="@{actionBar}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/spotifyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/button_corner"
            android:backgroundTint="@color/green"
            android:drawableStart="@drawable/spotify"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/white"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="@string/spotify"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImg"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_270"
            android:layout_marginTop="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/spotifyBtn"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.profile"
            app:strokeColor="@color/lightGray"
            app:strokeWidth="@dimen/dp_10" />

        <TextView
            android:id="@+id/musicTitle"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/musicTitle"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/profileImg" />

        <TextView
            android:id="@+id/musicSub"
            style="@style/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/musicSubtitle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/musicTitle" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/musicSeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="7dp"
            android:progressTint="@color/blue"
            android:thumb="@drawable/seekbar"
            android:thumbTint="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/musicSub" />

        <TextView
            android:id="@+id/startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startRange"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/musicSeek" />

        <TextView
            android:id="@+id/endText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endRange"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toBottomOf="@id/musicSeek" />

        <include
            android:id="@+id/card"
            layout="@layout/music_control_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonImages="@{castingBtn}"
            app:layout_constraintStart_toStartOf="@id/guideLine1"
            app:layout_constraintTop_toBottomOf="@id/startText"
            app:musicControls="@{musicControlCard}" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/lightGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_130"
            android:layout_marginBottom="@dimen/dp_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_lock_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/lockText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/lock"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/lock"
            app:layout_constraintTop_toTopOf="@id/lock" />

        <TextView
            android:id="@+id/lockMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/minutes"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@id/lockText"
            app:layout_constraintTop_toTopOf="@id/lockText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>