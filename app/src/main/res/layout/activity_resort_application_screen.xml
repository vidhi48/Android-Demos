<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBack"
    tools:context="com.example.demo.ResortApplicationScreen">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/navigation_item_color"
        app:itemTextColor="@color/navigation_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:menu="@menu/bottom_navigation_menu" />

    <TextView
        android:id="@+id/resortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/resortTitle"
        android:textColor="@color/lightBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_add_24"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/currentTxt"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/resortTitle" />

    <TextView
        android:id="@+id/executedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/executedTxt"
        android:textColor="@color/grayNew"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/currentText"
        app:layout_constraintTop_toTopOf="@id/currentText" />

    <TextView
        android:id="@+id/allText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/allTxt"
        android:textColor="@color/grayNew"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/executedTxt"
        app:layout_constraintTop_toTopOf="@id/currentText" />

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/currentText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/villaCard"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toStartOf="@id/villaCard2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/villaLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/villaLocation"
                        android:textColor="@color/gray"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/duration"
                        android:textColor="@color/grayNew"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/villaLocation"
                        app:layout_constraintTop_toBottomOf="@id/villaLocation" />

                    <ImageView
                        android:id="@+id/offerImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/flame"
                        app:layout_constraintStart_toEndOf="@id/villaLocation"
                        app:layout_constraintTop_toTopOf="@id/villaLocation" />

                    <TextView
                        android:id="@+id/offerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/offer"
                        android:textColor="@color/darkYellow"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/offerImage"
                        app:layout_constraintTop_toTopOf="@id/offerImage" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@id/duration"
                        app:layout_constraintTop_toBottomOf="@id/duration">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/guestChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/eggBlue"
                            android:text="@string/guestChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/bedroomChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blueColor"
                            android:text="@string/bedroomChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/priceChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/emeraldGreen"
                            android:text="@string/priceChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/poolChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/skyBlue"
                            android:text="@string/poolChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/kitchenChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkOrange"
                            android:text="@string/kitchenChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/wifiChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/brightPurple"
                            android:text="@string/wifiChip"
                            android:textColor="@color/white" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/villaCard2"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/villaCard"
                app:layout_constraintTop_toTopOf="@id/villaCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/villaLocation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/villaLocation"
                        android:textColor="@color/gray"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/duration2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/duration"
                        android:textColor="@color/grayNew"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/villaLocation2"
                        app:layout_constraintTop_toBottomOf="@id/villaLocation2" />

                    <ImageView
                        android:id="@+id/offerImage2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="35dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/flame"
                        app:layout_constraintStart_toEndOf="@id/villaLocation2"
                        app:layout_constraintTop_toTopOf="@id/villaLocation2" />

                    <TextView
                        android:id="@+id/offerText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/offer"
                        android:textColor="@color/darkYellow"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/offerImage2"
                        app:layout_constraintTop_toTopOf="@id/offerImage2" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@id/duration2"
                        app:layout_constraintTop_toBottomOf="@id/duration2">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/guestChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/eggBlue"
                            android:text="@string/guestChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/bedroomChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blueColor"
                            android:text="@string/bedroomChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/priceChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/emeraldGreen"
                            android:text="@string/priceChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/poolChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/skyBlue"
                            android:text="@string/poolChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/kitchenChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkOrange"
                            android:text="@string/kitchenChip"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/wifiChip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/brightPurple"
                            android:text="@string/wifiChip"
                            android:textColor="@color/white" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/popularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/popular"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/horizontalScroll" />

    <ImageButton
        android:id="@+id/filterBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/corner_radius"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/filter"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/popularText"
        app:tint="@color/purple_700" />

    <ScrollView
        android:id="@+id/verticalScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/popularText"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/villaInfo"
                layout="@layout/resort_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/villaInfo2"
                layout="@layout/resort_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/villaInfo"/>

            <include
                android:id="@+id/villaInfo3"
                layout="@layout/resort_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/villaInfo"
                app:layout_constraintTop_toTopOf="@id/villaInfo" />

            <include
                android:id="@+id/villaInfo4"
                layout="@layout/resort_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/villaInfo3"
                app:layout_constraintTop_toBottomOf="@id/villaInfo3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
