<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.demo.customview.SliderCustomView
        android:id="@+id/customSlider"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_280"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/coolingText"
        style="@style/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cooling"
        app:layout_constraintBottom_toTopOf="@id/centerText"
        app:layout_constraintEnd_toEndOf="@id/centerText"
        app:layout_constraintStart_toStartOf="@id/centerText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/discardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_remove_24"
        app:borderWidth="@dimen/dp_0"
        app:layout_constraintEnd_toStartOf="@id/centerText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/centerText"
        app:tint="@color/grayIcon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/centerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/tempText"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/customSlider"
        app:layout_constraintEnd_toEndOf="@id/customSlider"
        app:layout_constraintStart_toStartOf="@id/customSlider"
        app:layout_constraintTop_toTopOf="@id/customSlider" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_add_24"
        app:borderWidth="@dimen/dp_0"
        app:layout_constraintStart_toEndOf="@id/coolingText"
        app:layout_constraintTop_toTopOf="@id/centerText"
        app:tint="@color/grayIcon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/degree"
        style="@style/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        app:layout_constraintEnd_toEndOf="@id/centerText"
        app:layout_constraintStart_toStartOf="@id/centerText"
        app:layout_constraintTop_toBottomOf="@id/centerText" />

    <TextView
        android:id="@+id/startRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:text="@string/startTemp"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/customSlider"
        app:layout_constraintTop_toBottomOf="@id/customSlider" />

    <TextView
        android:id="@+id/endRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/endTemp"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/customSlider"
        app:layout_constraintTop_toBottomOf="@id/customSlider" />

</androidx.constraintlayout.widget.ConstraintLayout>