<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chipData1"
            type="com.example.demo.model.ResortChipModel" />

        <variable
            name="chipData2"
            type="com.example.demo.model.ResortChipModel" />

        <variable
            name="chipData3"
            type="com.example.demo.model.ResortChipModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayBack"
        tools:context="com.example.demo.screens.ResortScreen">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <ImageView
            android:id="@+id/bookmarkImage"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/baseline_bookmark_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/blueColor" />

        <ScrollView
            android:id="@+id/verticalScroll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="8dp"
            android:paddingBottom="@dimen/dp_55"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backImage">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/resortName"
                    style="@style/ResortTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/resortName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/starImage"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_7"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_star_24"
                    app:layout_constraintStart_toStartOf="@id/resortName"
                    app:layout_constraintTop_toBottomOf="@id/resortName"
                    app:tint="@color/yellow" />

                <TextView
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/ratings"
                    android:textColor="@color/gray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/starImage"
                    app:layout_constraintTop_toBottomOf="@id/resortName" />

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/reviews"
                    android:textColor="@color/lightGray"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@id/ratings"
                    app:layout_constraintTop_toTopOf="@id/ratings" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScroll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300"
                    android:layout_marginTop="@dimen/dp_20"
                    android:contentDescription="@string/actionTitle"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/starImage">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/resortImage1"
                            android:layout_width="@dimen/dp_330"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/resort"
                            app:shapeAppearance="@style/ShapeAppearanceOverlay.ResortImage" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/resortImage2"
                            android:layout_width="@dimen/dp_330"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:scaleType="fitXY"
                            android:src="@drawable/resort_image"
                            app:shapeAppearance="@style/ShapeAppearanceOverlay.ResortImage" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/resortImage3"
                            android:layout_width="@dimen/dp_330"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/resort_image2"
                            app:shapeAppearance="@style/ShapeAppearanceOverlay.ResortImage" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/imageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/rounded_text"
                    android:padding="5dp"
                    android:text="@string/imageNumber"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/horizontalScroll"
                    app:layout_constraintStart_toStartOf="@id/horizontalScroll" />

                <ImageView
                    android:id="@+id/locationImage"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_20"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"
                    app:layout_constraintStart_toStartOf="@id/starImage"
                    app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
                    app:tint="@color/yellow" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/locationImage"
                    app:layout_constraintTop_toTopOf="@id/locationImage" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/locationCircle"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/locationImage"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.CircleImage"
                    app:strokeColor="@color/lightWhite"
                    app:strokeWidth="@dimen/dp_5" />

                <TextView
                    android:id="@+id/featureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/feature"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/locationImage"
                    app:layout_constraintTop_toBottomOf="@id/locationImage" />

                <HorizontalScrollView
                    android:id="@+id/featureButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/featureText"
                    app:layout_constraintTop_toBottomOf="@id/featureText">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn1"
                            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:backgroundTint="@color/blueColor"
                            android:text="@{chipData1.title}"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:iconPadding="@dimen/dp_7"
                            app:startIconColor="@{android.R.color.white}"
                            app:startIconDrawable="@{chipData1.iconImage}"
                            app:strokeColor="@color/blueColor"
                            tools:text="@string/bedroom" />

                        <Button
                            android:id="@+id/btn2"
                            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:backgroundTint="@color/skyBlue"
                            android:text="@{chipData2.title}"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:iconPadding="@dimen/dp_10"
                            app:startIconColor="@{android.R.color.white}"
                            app:startIconDrawable="@{chipData2.iconImage}"
                            app:strokeColor="@color/skyBlue"
                            tools:text="@string/poolChip" />

                        <Button
                            android:id="@+id/btn3"
                            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:backgroundTint="@color/darkOrange"
                            android:text="@{chipData3.title}"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:iconPadding="@dimen/dp_10"
                            app:startIconColor="@{android.R.color.white}"
                            app:startIconDrawable="@{chipData3.iconImage}"
                            app:strokeColor="@color/darkOrange"
                            tools:text="@string/kitchenChip" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/villaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/villaText"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/featureText"
                    app:layout_constraintTop_toBottomOf="@id/featureButtons" />

                <TextView
                    android:id="@+id/villaInfo"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/villaInfo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/locationCircle"
                    app:layout_constraintStart_toStartOf="@id/villaText"
                    app:layout_constraintTop_toBottomOf="@id/villaText" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bookBtn"
            style="@style/NewApplicationTitles"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/button_corners"
            android:padding="@dimen/dp_15"
            android:text="@string/bookBtn"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>